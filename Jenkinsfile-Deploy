pipeline {
    agent any
    stages {
        stage('Stop and Remove Existing Container') {
            steps {
                sh '''
                    docker stop cont1 || true
                    docker rm cont1 || true
                '''
            }
        }
        stage('Run Docker Container') {
            steps {
                sh '''
                    docker run -d -p 9090:80 --name cont1 image1
                '''
            }
        }
    }
    post {
        always {
            echo 'Deployment Completed!'
        }
    }
}
