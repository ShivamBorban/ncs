pipeline {
    agent any
    parameters {
        string(name: 'Image Name', defaultValue: 'Image1', description: 'Type the name of the Docker image')
    }
    stages {
        stage('Build Docker Image') {
            steps {
                sh """
                    docker build -t ${params['Image Name']} .
                """
            }
        }
        stage('Trigger Deploy') {
            steps {
                build job: 'Deploy App'
            }
        }
    }
}
